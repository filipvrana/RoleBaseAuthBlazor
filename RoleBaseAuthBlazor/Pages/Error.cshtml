@page
@model RoleBaseAuthBlazor.Pages.ErrorModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Error</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
    <div class="main">
        <div class="content px-4">
            <h1 class="text-danger">Chyba.</h1>
            <h2 class="text-danger">Nastal error při zpracování tvého požadavku.</h2>

            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <h3>Vývojářský mód</h3>
            <p>
                Přepínám do <strong>VÝVOJÁŘSKÉHO</strong> prostředí. Prostředí zobrazí detailní informace o nastálém erroru.s
            </p>
            
        </div>
    </div>
</body>

</html>
